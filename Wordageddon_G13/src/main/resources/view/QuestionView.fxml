<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.shape.*?>
<?import javafx.scene.text.*?>

<Pane prefHeight="800.0" prefWidth="1400.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.game_controllers.QuestionMenuController">
   <children>
      <VBox alignment="CENTER" prefHeight="800.0" prefWidth="1400.0" spacing="50.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #1a1a2e, #16213e, #0f3460);">
         <children>
            <Label fx:id="numberQuestionLabel" text="Numero domanda" textFill="WHITE">
               <font>
                  <Font size="21.0" />
               </font>
            </Label>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0">
               <children>
                  <Label fx:id="questionLabel" prefHeight="55.0" prefWidth="1159.0" text="Domanda" textAlignment="CENTER" textFill="WHITE">
                     <font>
                        <Font name="Microsoft YaHei Bold" size="22.0" />
                     </font>
                  </Label>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <RadioButton fx:id="option2Btn" mnemonicParsing="false" text="option2" textFill="#f7f4f4">
                     <font>
                        <Font name="System Bold" size="23.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="option4Btn" mnemonicParsing="false" text="option4" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </RadioButton>
               </children>
            </HBox>
            <HBox alignment="CENTER" prefHeight="100.0" prefWidth="200.0" spacing="100.0">
               <children>
                  <RadioButton fx:id="option3Btn" mnemonicParsing="false" text="option3" textFill="WHITE">
                     <font>
                        <Font name="System Bold" size="23.0" />
                     </font>
                  </RadioButton>
                  <RadioButton fx:id="option1Btn" mnemonicParsing="false" text="option1" textFill="#fafafa">
                     <font>
                        <Font name="System Bold" size="24.0" />
                     </font>
                  </RadioButton>
               </children>
            </HBox>
            <StackPane prefHeight="144.0" prefWidth="1400.0">
               <children>
                  <Rectangle fx:id="rectangleForAnimation" arcHeight="5.0" arcWidth="5.0" fill="#ff3232" height="38.0" stroke="BLACK" strokeType="INSIDE" width="169.0" />
                  <Button fx:id="nextQuestionBtn" mnemonicParsing="false" onAction="#nextQuestion" prefHeight="40.0" prefWidth="194.0" style="-fx-text-fill: white; -fx-font-family: &quot;Microsoft YaHei&quot;; -fx-font-size: 20; -fx-border-radius: 20; -fx-background-radius: 17; -fx-background-color: red; -fx-font-weight: bold;" text="Next" />
               </children>
            </StackPane>
         </children>
      </VBox>
   </children>
</Pane>
