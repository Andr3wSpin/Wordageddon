<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="800.0" prefWidth="1400.0" style="-fx-background-color: linear-gradient(from 0% 0% to 100% 100%, #1a1a2e, #16213e, #0f3460), radial-gradient(radius 100%, transparent, #00000066);" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.AuthMenuController">

    <top>
        <HBox alignment="CENTER_LEFT" spacing="20" style="-fx-background-color: #0f3460; -fx-padding: 10;">
           <children>
               <Label style="-fx-text-fill: white; -fx-font-size: 24px; -fx-font-weight: bold;" text="WORDAGEDDON" />
           </children>
        </HBox>
    </top>

    <center>
        <VBox alignment="CENTER" maxWidth="400" spacing="20" style="-fx-background-color: rgba(255,255,255,0.05); -fx-background-radius: 20; -fx-padding: 40;">
           <children>
   
               <Label style="-fx-text-fill: white; -fx-font-size: 28px; -fx-font-weight: bold;" text="Sign-In" />
   
               <TextField fx:id="nomeUtenteTF" promptText="User name" style="-fx-background-radius: 10; -fx-background-color: #eeeeee; -fx-padding: 10;" />
   
               <TextField fx:id="passwordTF" promptText="Password" style="-fx-background-radius: 10; -fx-background-color: #eeeeee; -fx-padding: 10;" />
   
               <Button fx:id="loginButton" onAction="#handleLoginButtonAction" style="-fx-background-color: #0f3460; -fx-text-fill: white; -fx-font-size: 16px; -fx-background-radius: 10; -fx-padding: 10 20;" text="Login" />
   
               <Label onMouseClicked="#handleRegisterClick" style="-fx-text-fill: white; -fx-font-size: 14px; -fx-underline: true;" text="Not registered yet? Sign up!" />
           </children>

        </VBox>
    </center>

</BorderPane>
